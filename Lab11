  def pytanieKraj(self, k):
    self.kraj = k
  def pytanieMiasto(self, m):
    self.miasto = m
  def pytanieTransport(self, tr):
    self.transport = tr
  def pytanieLiczbaOsob(self, lo):
    self.liczbaOsob = lo
  def wyswietlAnkiete(self):
    print('Ankieta')
    print('Wiek:', self.wiek)
    print('Płeć:', self.plec)
    print('Kraj:', self.kraj)
    print('Miasto:', self.miasto)
    print('Transport:', self.transport)
    print('Liczba osób:', self.liczbaOsob)

