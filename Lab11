class Egzamin():
  Przedmioty = ['Matematyka dyskretna', 'Analiza matematyczna 2', 'Architektura systemów komputerowych', 'Język angielski 2', 'Programowanie obiektowe', 'Programowanie w języku Python']
  nrPrzedmiotu = 0
  def __init__(self, p):
    self.nrPrzedmiotu = p
    print('Pierwszym przedmiotem do zdania jest:', self.Przedmioty[self.nrPrzedmiotu])
  def ustawPrzedmiot(self, p):
    self.nrPrzedmiotu = p
  def wyswietlPrzedmiot(self):
    print('Pierwszym przedmiotem do zdania jest:', self.Przedmioty[self.nrPrzedmiotu])

eg = Egzamin(2)
eg.ustawPrzedmiot(4)
eg.wyswietlPrzedmiot()


import math

class Kolo():
  def __init__(self):
    self.promien = 1
  def ustawPromien(self, r):
    self.promien = r
  def obliczPole(self):
    pole = self.promien * self.promien * math.pi
    print('Pole koła wynosi:', pole)
  def obliczObwod(self):
    obw = self.promien * 2 * math.pi
    print('Obwód koła wynosi:', obw)

kolo = Kolo()
kolo.ustawPromien(3)
kolo.obliczPole()
kolo.obliczObwod()


